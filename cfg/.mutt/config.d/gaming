# account settings
set imap_user=29forte95@gmail.com
set imap_pass=`pass show email/google/app-password/29forte95@gmail.com/mutt`

# encryption settings
set pgp_sign_as=0xDBAA20F8379A18246042D6BA9790DB99CC5F99B3

# mailbox settings
set mbox_type=Maildir
set folder=~/Mail/29forte95@gmail.com/
set spoolfile=+INBOX
set header_cache=~/.cache/mutt
set postponed=+[Gmail]/Drafts
unset record
mailboxes +INBOX "+[Gmail]/All Mail" "+[Gmail]/Sent Mail"

# mail settings
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com/
set realname='Ian Emnace'
set from=29forte95@gmail.com
set hostname="gmail.com"
set ssl_force_tls=yes
unset ssl_starttls

# hooks
account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"
folder-hook $folder 'source ~/.mutt/config.d/gaming'
