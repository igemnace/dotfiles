# account settings
set imap_user=igemnace@gmail.com
set imap_pass=`pass show email/google/app-password/igemnace@gmail.com/mutt`

# encryption settings
set pgp_sign_as=0xE745ECDBA8D167079F8353DF5E5B911E510DF7BE

# mailbox settings
set mbox_type=Maildir
set folder=~/Mail/igemnace@gmail.com/
set spoolfile=+INBOX
set header_cache=~/.cache/mutt
set postponed=+[Gmail]/Drafts
unset record
mailboxes +INBOX "+[Gmail]/All Mail" "+[Gmail]/Sent Mail"

# mail settings
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com/
set realname='Ian Emnace'
set from=igemnace@gmail.com
set hostname="gmail.com"
set ssl_force_tls=yes
unset ssl_starttls

# hooks
account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"
folder-hook $folder 'source ~/.mutt/config.d/main'
